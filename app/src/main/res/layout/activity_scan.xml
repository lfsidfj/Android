<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_barCodeTipText="将条码放入框内，即可自动扫描"
        app:qrcv_barcodeRectHeight="120dp"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="@color/colorPrimaryDark"
        app:qrcv_cornerDisplayType="center"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="3dp"
        app:qrcv_customScanLineDrawable="@drawable/scan_icon_scanline"
        app:qrcv_isBarcode="false"
        app:qrcv_isOnlyDecodeScanBoxArea="false"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_isShowDefaultGridScanLineDrawable="false"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_isShowLocationPoint="false"
        app:qrcv_isShowTipBackground="true"
        app:qrcv_isShowTipTextAsSingleLine="false"
        app:qrcv_isTipTextBelowRect="false"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_qrCodeTipText="将二维码/条码放入框内，即可自动扫描"
        app:qrcv_rectWidth="200dp"
        app:qrcv_scanLineColor="@color/colorPrimaryDark"
        app:qrcv_scanLineMargin="0dp"
        app:qrcv_scanLineSize="0.5dp"
        app:qrcv_tipTextColor="@android:color/white"
        app:qrcv_tipTextSize="12sp"
        app:qrcv_toolbarHeight="56dp"
        app:qrcv_topOffset="80dp"
        app:qrcv_verticalBias="-1" >
    </cn.bingoogolapple.qrcode.zxing.ZXingView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/start_spot"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开始识别"/>
            <TextView
                android:id="@+id/stop_spot"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="暂停识别"/>
            <TextView
                android:id="@+id/show_scan_rect"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="显示扫描框"/>
            <TextView
                android:id="@+id/hidden_scan_rect"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="隐藏扫描框"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/start_spot_showrect"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开始识别显示扫描框"/>
            <TextView
                android:id="@+id/stop_spot_hiddenrect"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="暂停识别隐藏扫描框"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/start_preview"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开始预览"/>
            <TextView
                android:id="@+id/stop_preview"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="停止预览"/>
            <TextView
                android:id="@+id/scan_one_dimension"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="扫条码"/>
            <TextView
                android:id="@+id/scan_two_dimension"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="扫二维码"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/open_flashlight"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="开灯"/>
            <TextView
                android:id="@+id/close_flashlight"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="关灯"/>
            <TextView
                android:id="@+id/choose_qrcde_from_gallery"
                style="@style/scanBarText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="从相册选取扫描"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>